# Azure Credentials Template
# Copy this file to .env.local and fill in your values

# ============================================================================
# AZURE CREDENTIALS (Service Principal)
# ============================================================================
# Get these from Azure Portal > App Registrations > Your App > Overview

AZURE_CLIENT_ID="your-client-id-here"
AZURE_CLIENT_SECRET="your-client-secret-here"
AZURE_TENANT_ID="your-tenant-id-here"
AZURE_SUBSCRIPTION_ID="your-subscription-id-here"

# ============================================================================
# AZURE RESOURCES
# ============================================================================

# Container Registry Name (without .azurecr.io)
ACR_NAME="helloCicdRegistry"

# Container App Name
CONTAINER_APP="hello-cicd-app"

# Resource Group Name
RESOURCE_GROUP="hello-cicd-rg"

# Container App Environment (if different)
CONTAINER_APP_ENV="hello-cicd-env"

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Flask Environment
FLASK_ENV="production"

# Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY="your-secret-key-here"

# Database URL (if using external database)
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# ============================================================================
# OPTIONAL: LOG ANALYTICS
# ============================================================================

LOG_ANALYTICS_WORKSPACE="hello-cicd-logs"
